<body>
<header>
  <div class="title">
    All Sales
  </div>
<div class="todays">
  <div class="today" id="view_clock"></div>
</div>
  <div class="login">
    <%= link_to current_user.name, root_path(current_user), class: "shop" %>
  </div>
</header>
<main>
  <div class="searchall1">
    <div class="searchall30">
      <% @results.each do |allsale| %>
      <div class="search1">
        <div class="searchday">
          <%= allsale.created_at.strftime('%Y/%m/%d') %>
        </div>
        <div class="searchstaff">
          <%= allsale.checkstaff%>
        </div>
        <div class="searchguest">
          <%= allsale.checkguest%>
        </div>
        <div class="searchallprice">
          ¥<%= allsale.allprice%>
        </div>
      </div>
      <% end %>
    </div>
    <div class="searchall">
      ¥<%= @results.sum(:allprice) %>
    </div>
    <%= link_to '戻る', allsales_path, class:"top" %>
  </div>
</main>
<footer>
  <div class="logout">
    <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'out'%>
  </div>
</footer>
</body>