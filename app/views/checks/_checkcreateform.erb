<div class="maintop4">
  <div class="check_room_show">
    <div class="title_a">
          伝票
    </div>
    <div class="check_room_names">
      <div class="check_room_name">
        <%= @checkrooms.room_name %>
      </div>
      <div class="check_hawmany">
        <%= @checkrooms.how_many%>名
        <%= link_to "×", checkroom_path(@checkrooms), method: :delete, data: {"turbolinks" => false} %> 
      </div>
    </div>
    <div class="message1">
      <%= render partial: 'check', collection: @checks %>
    </div>
    <%= render "allsales/allsales" %>
  </div>
  <div class="check_create">
    <div class="title_a">
      オーダー
    </div>
    <div class="check_create_form">
      <%= form_with model: [@checkrooms, @check], class: 'form', local: true do |f| %>
        <div class="check_create_form1">
          <%= f.collection_select :menuname, @menus, :menu_name, :menu_name, {include_blank: "メニュー選択"}, {class:"menuname", id:"ab"} %>
        </div>
        <div class="check_create_link">
          <%= link_to 'メニュー登録へ', menus_path(current_user), data: {"turbolinks" => false}, class: "menubtn1" %>
        </div>
        <div class="check_create_count">
          <INPUT type=button value="－" onClick="minus(this.form.gh)">
          <%= f.text_field :cup,  value: 1, class: 'cups', id: 'gh', size: 4 %>
          <INPUT type=button value="＋" onClick="plus(this.form.gh)">
        </div>
        <div class="check_create_form2">
          <%= f.collection_select :menuprice, @menus.select(:price).distinct.order('price'), :price, :price, {include_blank: "金額選択"}, {class: 'menuprice',  id: 'cd', onchange:"myfunc()"} %>
        </div>
        <div class="check_create_form3">
          <%= f.text_field :menuallprice, class: 'menuallprice', placeholder: '合計金額(半角数字)', id: 'ef'%>
        </div>
        <div class="check_create_btn">
          <%=f.submit class:"drinkmenu", value: 'オーダー追加' %>
        </div>
      <% end %>
    </div>
  </div>
</div>


      <SCRIPT>
        function myfunc(){
          let price = document.getElementById("cd").value;
          let cup = document.getElementById("gh").value
          document.getElementById("ef").value = price * cup;
        }
      </SCRIPT>
    
      <SCRIPT>
        function plus(chk){
        chk.value++;
        if (chk.value==100) {chk.value=99}
        }
        function minus(chk){
        chk.value--;
        if (chk.value==-1) {chk.value=0}
        }
      </SCRIPT>